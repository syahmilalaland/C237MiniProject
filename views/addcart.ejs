<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Add To Cart</title>
    </head>
<body>
   <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Add To Cart</h2></div>
        <br>
        <div class="text-center">
            <form action="/addtocart" method="POST" enctype="multipart/form-data">
                <label for="randomName">Product Name:</label><br>
                <input type="text" id="randomName" name="randomName" required><br><br>

                <label for="randomImage">Product Image:</label><br>
                <input type="text" id="randomImage" name="randomImage" required><br><br>

                <label for="randomPrice">Random Price:</label><br>
                <input type="text" id="randomPrice" name="randomPrice"required><br><br>

                <button type="submit">Add</button>
            </form>
        </div>
    </div>
</body>
</html>
